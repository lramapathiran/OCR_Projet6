package com.lavanya.escalade.controller;

import java.util.List;

import javax.validation.Valid;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;


import com.lavanya.escalade.model.Site;
import com.lavanya.escalade.service.SiteService;

@Controller
public class SiteMainController {
	
	@Autowired 
	private SiteService siteService;
	
	@GetMapping("/createSite/{id}")
	public String showSiteForm(@PathVariable (value = "id") int id, Model model) {
		
		Site site = new Site();
		site.setSiteId(id);
		model.addAttribute("site", site);
		  
	    return "addSite";
	}
	
	@PostMapping("/saveSite")
	public String saveUser(@Valid @ModelAttribute ("site") Site site, BindingResult result, Model model) {
		
		if (result.hasErrors()) {		 
	          return "createSite";
	    }
		
		siteService.save(site);
		
		
		return "redirect:/createSite";
	}
	
	
	@GetMapping(path="/sites")
	public String showSitesList (Model model){
		List<Site> sitesList = siteService.sitesList();
		model.addAttribute("listSites", sitesList);
		return "sitesList";
	}
}
