package com.lavanya.escalade.repository;


import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.lavanya.escalade.model.Site;
import com.lavanya.escalade.repository.custom.SiteRepositoryCustom;

@Repository
public interface SiteRepository extends JpaRepository<Site, Integer>, SiteRepositoryCustom {

	
	@Query("SELECT * FROM site WHERE creator_id = ?")
	List<Site> getUserAllSitesById(@Param("creator_id") int user_id);
	
}
