package com.lavanya.escalade.repository;


import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.lavanya.escalade.model.Site;
import com.lavanya.escalade.repository.custom.SiteRepositoryCustom;

@Repository
public interface SiteRepository extends JpaRepository<Site, Integer> {

//	@Query("select u from Site u where u.userId = ?1")
//	List <Site> findByUserId(int userId);
	@Query("SELECT u FROM site u WHERE u.userId = :userId")
	List<Site> findByUserId(@Param("userId") int userId);
	
}
