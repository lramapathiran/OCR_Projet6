package com.lavanya.escalade.controller;


import java.util.ArrayList;
import java.util.List;

import javax.validation.Valid;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.lavanya.escalade.model.User;
import com.lavanya.escalade.repository.UserRepository;

@Controller // This means that this class is a Controller
public class UserMainController {
  
  private UserRepository userRepository;
  
  @Autowired // This means to get the bean called userRepository
  // Which is auto-generated by Spring, we will use it to handle the data
  public UserMainController(UserRepository userRepository) {
      this.userRepository = userRepository;
  }


  @GetMapping("/signup")
	public String showSignUpForm (User user) {
	  
	  	return "addUser";
	}
  
  @PostMapping("/addUser")
	public String saveUser (@Valid User user, BindingResult result, Model model) {
	  
	  if (result.hasErrors()) {
          return "addUser";
      }
      
	  user.setAdminRights(false);
      userRepository.save(user);
//      model.addAttribute("users", userRepository.findAll());
      		
	
		return "addUser";
	}
  
//   @GetMapping("/users")
//   	public String showUsersList() {
//	   return "users";
//   }
}
